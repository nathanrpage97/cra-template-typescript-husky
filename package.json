{
  "name": "cra-template-typescript-husky",
  "version": "0.1.0",
  "description": "A Create React App template integrated with husky",
  "main": "template.json",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=8.10"
  },
  "keywords": [
    "react",
    "create-react-app",
    "template",
    "typescript"
  ],
  "license": "MIT",
  "files": [
    "template",
    "template.json"
  ],
  "devDependencies": {
    "@types/node": "^13.7.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
